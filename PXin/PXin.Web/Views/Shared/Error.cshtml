@model HandleErrorInfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>错误</title>
</head>
<body>
    <hgroup>
        <h1>访问出错</h1>
        <h2>出错地址：@(Model.ControllerName + "/" + Model.ActionName)</h2>
        <h3 style="display:none;">@Model.Exception.ToString()</h3>
    </hgroup>
</body>
</html>
